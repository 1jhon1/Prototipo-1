<% include partes/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" enctype="multipart/form-data "  method="POST" >
          <div class="form-group">
            <input type="text" name="Nombre_del_producto" value="<%= data.Nombre_del_producto%>" placeholder="Nombre del producto" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="Precio" value="<%= data.Precio%>" placeholder="Precio" class="form-control">
          </div>
          <div class="form-group">
            <div class="col-sm-9"><input type="file" name="Imagen" value="<%= data.Imagen%>" class="form-control"> <br><b>  Limite de 3 MB por logo<br>
              Tipos permitidos: jpeg, png, jpg, gif, svg;</b> <br></div>
          </div>
          
          <button type="submit" class="btn btn-success">
            Guardar Producto
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partes/_footer %>
